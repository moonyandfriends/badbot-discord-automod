{
  "name": "BadBot Discord AutoMod",
  "description": "Discord bot for multi-server scam detection and banning",
  "repository": "https://github.com/moonyandfriends/badbot-discord-automod",
  "keywords": ["python", "discord", "bot", "automod", "scam-detection"],
  "env": {
    "badbot_discord_token": {
      "description": "Your Discord bot token",
      "required": true
    },
    "badbot_openai_key": {
      "description": "Your OpenAI API key",
      "required": true
    },
    "badbot_automod_servers": {
      "description": "Server configuration in format: guildID|guildName|logChannelID,guildID2|guildName2|logChannelID2",
      "required": true
    },
    "badbot_automod_webhookurls": {
      "description": "Webhook URLs with optional server names: webhook1|servername1,webhook2|servername2",
      "required": false
    },
    "openai_model": {
      "description": "OpenAI model to use",
      "value": "gpt-4o-mini",
      "required": false
    },
    "openai_temperature": {
      "description": "Temperature for OpenAI responses",
      "value": "0.0",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
} 